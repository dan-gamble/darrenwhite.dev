{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "~/components": ["./components/index.ts"],
      "~/context": ["./context/index.ts"],
      "~/hooks": ["./hooks/index.ts"],
      "~/util": ["./util/index.ts"],
      "~/layouts": ["./layouts/index.ts"],
      "~/lib": ["./lib/index.ts"],
    },
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",    
  ],
  "exclude": [
    "node_modules"
  ]
}